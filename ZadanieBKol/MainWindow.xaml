<Window x:Class="ZadanieBKol.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ZadanieBKol"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <ListBox x:Name="lbxKsiazki" HorizontalAlignment="Left" Height="385" Margin="380,26,0,0" VerticalAlignment="Top" Width="398" d:ItemsSource="{d:SampleData ItemCount=5}"/>
        <Label x:Name="lbLiczbaKsiazek" Content="Liczba ksiazek" HorizontalAlignment="Left" Height="50" Margin="21,361,0,0" VerticalAlignment="Top" Width="341"/>
        <Button x:Name="btnDodaj" Content="DODAJ" HorizontalAlignment="Left" Height="49" Margin="21,290,0,0" VerticalAlignment="Top" Width="171" Click="btnDodaj_Click"/>
        <Button x:Name="btnUsun" Content="USUN" HorizontalAlignment="Left" Height="49" Margin="210,290,0,0" VerticalAlignment="Top" Width="152" Click="btnUsun_Click"/>
        <TextBox x:Name="txtTytul" HorizontalAlignment="Left" Height="43" Margin="21,26,0,0" TextWrapping="Wrap" Text="Tytul" VerticalAlignment="Top" Width="329"/>
        <TextBox x:Name="txtAutor" HorizontalAlignment="Left" Height="44" Margin="21,84,0,0" TextWrapping="Wrap" Text="Autor" VerticalAlignment="Top" Width="329"/>
        <TextBox x:Name="txtRokWydania" HorizontalAlignment="Left" Height="44" Margin="21,150,0,0" TextWrapping="Wrap" Text="RokWydania" VerticalAlignment="Top" Width="329"/>
        <TextBox x:Name="txtGatunek" HorizontalAlignment="Left" Height="45" Margin="21,217,0,0" TextWrapping="Wrap" Text="Gatunek" VerticalAlignment="Top" Width="329"/>

    </Grid>
</Window>
