<Window x:Class="Kolokwium8GP.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Kolokwium8GP"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Label x:Name="lbSredniaStron" Content="Srednia stron" HorizontalAlignment="Left" Height="42" Margin="25,372,0,0" VerticalAlignment="Top" Width="215"/>
        <ListBox x:Name="lbxKsiazki" HorizontalAlignment="Left" Height="404" Margin="291,10,0,0" VerticalAlignment="Top" Width="489" d:ItemsSource="{d:SampleData ItemCount=5}"/>
        <Button x:Name="btnDodaj" Content="DODAJ" HorizontalAlignment="Left" Height="42" Margin="13,306,0,0" VerticalAlignment="Top" Width="119" Click="btnDodaj_Click"/>
        <Button x:Name="btnUsun" Content="USUN" HorizontalAlignment="Left" Height="42" Margin="137,306,0,0" VerticalAlignment="Top" Width="133" Click="btnUsun_Click"/>
        <TextBox x:Name="txtTytul" HorizontalAlignment="Left" Height="35" Margin="13,20,0,0" TextWrapping="Wrap" Text="tytul" VerticalAlignment="Top" Width="257"/>
        <TextBox x:Name="txtAutor" HorizontalAlignment="Left" Height="33" Margin="13,70,0,0" TextWrapping="Wrap" Text="autor" VerticalAlignment="Top" Width="257"/>
        <TextBox x:Name="txtISBN" HorizontalAlignment="Left" Height="32" Margin="13,119,0,0" TextWrapping="Wrap" Text="isbn" VerticalAlignment="Top" Width="257"/>
        <TextBox x:Name="txtLiczbaStron" HorizontalAlignment="Left" Height="35" Margin="13,167,0,0" TextWrapping="Wrap" Text="liczbastron" VerticalAlignment="Top" Width="257"/>

    </Grid>
</Window>
